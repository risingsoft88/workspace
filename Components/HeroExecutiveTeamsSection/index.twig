<section class="hero-executive-teams-section">
    <div class="container">
        <div class="hero-executive-teams-content">
            {{ content|e('wp_kses_post') }}
        </div>
    </div>
    {% if background_element_image_1 %}
        <div class="hero-executive-teams-img-elem-desktop" style="right: -76px;bottom: -524px;">
