                class="lazyload"
                src="{{ placeholderImage(background_element_image_1.width / 2, background_element_image_1.height / 2) }}"
                data-src="{{ background_element_image_1.src|resizeDynamic(background_element_image_1.width / 2, background_element_image_1.height / 2) }}"
                data-srcset="{{ background_element_image_1.src|resizeDynamic(background_element_image_1.width / 2, background_element_image_1.height / 2) }} 1x, {{ background_element_image_1.src|resizeDynamic(background_element_image_1.width, background_element_image_1.height) }} 2x"
