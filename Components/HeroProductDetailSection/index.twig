<section class="hero-product-detail-section">
    <div class="container">
        <div class="hero-product-detail-content">
            {{ content|e('wp_kses_post') }}
        </div>
        <div class="hero-product-detail-img">
            {% if retina_image %}
                <img
                    class="lazyload"
                    src="{{ placeholderImage(image.width, image.height) }}"
                    data-src="{{ image.src|resizeDynamic(image.width) }}"
                    data-srcset="{{ image.src|resizeDynamic(image.width) }} 1x, {{ retina_image.src|resizeDynamic(retina_image.width) }} 2x"
                    data-sizes="auto"
                    alt="{{ image.alt|e }}"
                >
            {% else %}
                <img
                    class="lazyload"
                    src="{{ placeholderImage(image.width, image.height) }}"
                    data-src="{{ image.src|resizeDynamic(image.width) }}"
                    alt="{{ image.alt|e }}"
                >
            {% endif %}
        </div>
    </div>
</section>